<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/navbar"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:orientation="horizontal"
        android:layout_marginTop="10sp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:src="@drawable/baseline_sync_alt_24"
            android:layout_marginLeft="10sp"
            android:layout_width="50sp"
            android:layout_height="match_parent">

        </ImageView>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_radius"
            android:text="EQ"
            android:textColor="@color/purple">

        </Button>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            >

        </View>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginRight="10sp"
            android:src="@drawable/arrow_down">

        </ImageView>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="5"
        app:layout_constraintBottom_toTopOf="@+id/playbar"
        app:layout_constraintTop_toBottomOf="@+id/navbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Hello Future"
                android:textAlignment="center"
                android:textSize="30dp"></TextView>

            <TextView
                android:id="@+id/singer"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="NCT DREAM"
                android:textAlignment="center"
                android:textSize="15dp">

            </TextView>

        </LinearLayout>


        <ImageView

            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_weight="3"
            android:src="@drawable/album">

        </ImageView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="ðŸ’™"
            android:textSize="30sp"
            android:textAlignment="center"
            android:layout_weight="1"
            >


        </TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="ì•„ë¬´ê±±ì • í•˜ì§€ë§ˆ~ ìž˜ë ê±°ì•¼ hello future"
            android:textSize="20sp"
            android:textAlignment="center"
            android:layout_weight="1"
            >


        </TextView>




    </LinearLayout>

    <LinearLayout
        android:id="@+id/playbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/main"
        android:gravity="center"
        android:weightSum="7"
        >

        <ImageView
            android:src="@drawable/left_arrow"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:layout_weight="1"
            >
        </ImageView>

        <ImageView
            android:id="@+id/play"
            android:src="@drawable/play"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:layout_weight="1"
            >
        </ImageView>

        <ImageView
            android:id="@+id/pause"
            android:src="@drawable/pause"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:layout_weight="1"
            >
        </ImageView>

        <ImageView
            android:src="@drawable/baseline_keyboard_double_arrow_right_24"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:layout_weight="1"
            >
        </ImageView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>